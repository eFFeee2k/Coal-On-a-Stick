        if(entity instanceof SheepEntity && entity.isAlive() && player.getHeldItemMainhand().getItem() == ModItems.COALONASTICK.get())
        {
            WitherSkeletonEntity wither = new WitherSkeletonEntity(WITHER_SKELETON,entity.getEntityWorld());
            wither.setLocationAndAngles(entity.getPosX(),entity.getPosY(),entity.getPosZ(),0,0);
            entity.remove();

            wither.forceSpawn = true;

            /* if (!player.world.isRemote())
            {
                Minecraft.getInstance().world.addEntity(wither);
            }
            */

            LogManager.getLogger().debug( wither.getPosX() + " " + wither.getPosY() + " " + wither.getPosZ());
            LogManager.getLogger().debug( player.getPosX() + " " + player.getPosY() + " " + player.getPosZ());
        }
